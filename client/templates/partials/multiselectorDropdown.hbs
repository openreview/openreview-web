<div class="multiselector dropdown">
  <button class="form-control dropdown-toggle" type="button"
          id="{{id}}" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="true">
          {{buttonText}}
  </button>
  <ul class="dropdown-menu checkbox-menu allow-focus" aria-labelledby="{{id}}">
    {{#unless hideSelectAll}}
      <li class="select-all-item">
        <label>
          <input class="select-all-checkbox" type="checkbox" {{#unless defaultUnchecked}}checked{{/unless}}/> Select All
        </label>
      </li>
    {{/unless}}
    {{#each htmlFilters}}
      <li>
        <label>
          <input class="{{../id}}-multiselector-checkbox" type="checkbox" value="{{valueFilter}}" {{#unless ../defaultUnchecked}}checked{{/unless}}/> {{textFilter}}
        </label>
      </li>
    {{/each}}
  </ul>
</div>
