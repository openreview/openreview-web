<h4>{{title}} ({{totalCount}})</h4>

<ul class="list-unstyled list-paginated">
  {{#each profiles}}
    <li data-id="{{id}}">
      <span class="col-name">
        <a href="/profile?id={{id}}" target="_blank" title={{id}}>
          {{#with content.names.[0]}}{{first}} {{middle}} {{last}}{{/with}}
        </a>
      </span>

      <span class="col-email text-muted">
        {{content.preferredEmail}}
      </span>

      <span class="col-created">
        {{dateTime tmdate}}
      </span>

      <span class="col-status">
        <span class="label label-{{#if password}}success{{else}}danger{{/if}}">password</span>
        <span class="label label-{{#if active}}success{{else}}danger{{/if}}">active</span>
      </span>

      <span class="col-actions">
        {{#if ../isModerationQueue}}
          <button class="btn btn-xs accept-profile"><span class="glyphicon glyphicon-ok-circle"></span> Accept</button>
          <button class="btn btn-xs reject-profile"><span class="glyphicon glyphicon-remove-circle"></span> Reject</button>
        {{else}}
          <button class="btn btn-xs delete-profile" disabled><span class="glyphicon glyphicon-remove-circle"></span> Delete</button>
        {{/if}}
      </span>
    </li>
  {{else}}
    <li><p class="empty-message">No profiles pending moderation.</p></li>
  {{/each}}
</ul>

{{#gt totalCount pageSize}}
  {{pagination totalCount pageSize pageNum null}}
{{/gt}}
