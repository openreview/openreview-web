<section class="general">
  <h4>General Info</h4>
  {{> groupInfoTable editable=true isSuperUser=isSuperUser}}
</section>

<section class="members">
  <h4>Group Members {{#if groupMembersCount}}({{groupMembersCount}}){{/if}}</h4>

  {{> spinner extraClasses="spinner-inline"}}
</section>

<section class="messages">
  <h4>Group Messages</h4>

  <div class="progress" style="display: none;">
    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
      <span class="sr-only"></span>
    </div>
  </div>
  <p class="progress-status"></p>

  <a href="/messages?parentGroup={{group.id}}">View all messages sent to this group &raquo;</a>
</section>

<section class="notes">
  <h4>Signed Notes</h4>

  {{> spinner extraClasses="spinner-inline"}}
</section>

<section class="children">
  <h4>Child Groups</h4>

  {{> spinner extraClasses="spinner-inline"}}
</section>

<section class="invitations">
  <h4>Related Invitations</h4>

  {{> spinner extraClasses="spinner-inline"}}
</section>

<section class="webfield">
  <h4>Group UI Code</h4>

  <button class="btn btn-primary load-editor-btn">Show Code Editor</button>

  <div class="webfield-editor-container" style="display: none;">
    <div id="webfield-editor"></div>

    <button class="btn btn-primary save-btn">Update Code</button>
    <button class="btn btn-default cancel-btn">Cancel</button>
  </div>
</section>
