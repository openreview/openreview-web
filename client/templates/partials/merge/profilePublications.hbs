<table style="width: 100%;">
  {{#each publications}}
    <tr>
      <td style="padding-top: 10px;">
        <a href="/forum?id={{forum}}" target="_blank">
          <strong class="{{#if (isEqual ../index 0)}}left-profile-value{{else}}right-profile-value{{/if}}">
            {{title}}
          </strong>
        </a>
      </td>
    </tr>
    <tr>
      <td>
        {{#each authors as |author|}}
          <span class="{{#if (isEqual ../../index 0)}}left-profile-value{{else}}right-profile-value{{/if}}">{{author}}</span><span>, </span>
        {{/each}}
      </td>
    </tr>
    <tr>
      <td>
        {{#each authorids as |authorid|}}
          <a href="/group?id={{authorid}}" target="_blank">
            <span class="{{#if (isEqual ../../index 0)}}left-profile-value{{else}}right-profile-value{{/if}}">{{authorid}}</span><span>, </span>
          </a>
        {{/each}}
      </td>
    </tr>
  {{/each}}
</table>
