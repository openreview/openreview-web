{
  "apps" : [
    {
      "name": "openreview-web",
      "script": "$PWD/node_modules/.bin/next",
      "cwd": "$PWD",
      "args": "start -p 3030",
      "instances": "max",
      "exec_mode": "cluster",
      "watch": false,
      "combine_logs": true,
      "merge_logs": true,
      "error_file": "/home/openreview/logs/openreview-web-error.log",
      "out_file": "/home/openreview/logs/openreview-web-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env" : {
        "NODE_ENV": "development",
        "NEXT_PORT": 3030
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "NEXT_PORT": 3030
      },
      "env_production": {
        "NODE_ENV": "production",
        "NEXT_PORT": 3030
      }
    }
  ]
}
